{
    "model": "cnn1d",
    "dataset": {
      "data_path": "data/RAVDESS_Data",
      "class_labels": [
        "Neutral", "Calm", "Happy", "Sad", "Angry", "Fear", "Disgust", "Surprise"
      ]
    },
    "features": {
      "feature_method": "opensmile",
      "feature_folder": "features/8-category/opensmile_ravdess/"
    },
    "training": {
      "epochs": 50,
      "batch_size": 32,
      "learning_rate": 0.001,
      "test_size": 0.2,
      "random_state": 42,
      "callbacks": {
        "checkpoint_path": "checkpoints/best_model_weights.h5",
        "monitor": "val_accuracy",
        "early_stop_patience": 5,
        "lr_reduction_patience": 3,
        "lr_reduction_factor": 0.5,
        "min_lr": 0.00001
      }
    },
    "model_params": {
      "input_shape": ["dynamic", 1],
      "num_classes": 8,
      "conv_layers": [
        {"filters": 512, "kernel_size": 5, "stride": 1, "pool_size": 5, "dropout": 0.0},
        {"filters": 512, "kernel_size": 5, "stride": 1, "pool_size": 5, "dropout": 0.2},
        {"filters": 256, "kernel_size": 5, "stride": 1, "pool_size": 5, "dropout": 0.0},
        {"filters": 256, "kernel_size": 3, "stride": 1, "pool_size": 5, "dropout": 0.2},
        {"filters": 128, "kernel_size": 3, "stride": 1, "pool_size": 5, "dropout": 0.2}
      ],
      "dense_layers": [
        {"units": 512, "activation": "relu"},
        {"units": 8, "activation": "softmax"}
      ]
    }
  }
  